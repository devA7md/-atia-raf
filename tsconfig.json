{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "types": ["jest"],
    "outDir": "lib/esm"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
